@model DocuLink.Models.Doctor

@{
    ViewData["Title"] = "Tableau de bord Médecin";
}

<div class="container mt-5">
    <div class="alert alert-success">
        Bienvenue, Dr. <strong>@Model.Name</strong> 👨‍⚕️
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title">Vos Informations</h4>
            <ul class="list-group">
                <li class="list-group-item"><strong>Email:</strong> @Model.Email</li>
                <li class="list-group-item"><strong>Téléphone:</strong> @Model.Phone</li>
                <li class="list-group-item"><strong>Spécialité:</strong> @Model.Specialty</li>
                <li class="list-group-item"><strong>Cabinet:</strong> @Model.Location</li>
            </ul>

            <div class="mt-4">
                <a asp-controller="Doctor" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning">Modifier mon profil</a>
                <a asp-action="Logout" class="btn btn-outline-danger ms-2">Se déconnecter</a>
            </div>
        </div>
    </div>
</div>
