@model DocuLink.Models.Doctor

@{
    ViewData["Title"] = "Ajouter un Médecin";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">
                <i class="fas fa-user-md me-2"></i>@ViewData["Title"]
            </h2>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Nom complet" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Specialty" class="form-label"></label>
                        <input asp-for="Specialty" class="form-control" placeholder="Spécialité (ex: Pédiatre)" />
                        <span asp-validation-for="Specialty" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Phone" class="form-label"></label>
                        <input asp-for="Phone" class="form-control" placeholder="Téléphone" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Location" class="form-label"></label>
                        <input asp-for="Location" class="form-control" placeholder="Lieu de travail (ex: Clinique El Amen)" />
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>

                    <div class="col-12 mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Enregistrer
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                            <i class="fas fa-arrow-left me-2"></i>Retour
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
