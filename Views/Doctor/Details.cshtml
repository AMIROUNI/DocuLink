@model DocuLink.Models.Doctor

@{
    ViewData["Title"] = "Détails du Médecin";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h2 class="mb-0">
                <i class="fas fa-id-card me-2"></i>@ViewData["Title"]
            </h2>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nom Complet</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Spécialité</dt>
                <dd class="col-sm-9">@Model.Specialty</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Id</dd>
            </dl>

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="fas fa-edit me-2"></i>Modifier
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                    <i class="fas fa-list me-2"></i>Liste des Médecins
                </a>
            </div>
        </div>
    </div>
</div>