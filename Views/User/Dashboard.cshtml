@model DocuLink.Models.User
@{
    ViewData["Title"] = "Tableau de bord Utilisateur";
}

<div class="container mt-5">
    <div class="alert alert-primary d-flex justify-content-between align-items-center">
        <div>
            👋 Bienvenue, <strong>@Model.Name 
        </div>
        <a asp-action="Logout" class="btn btn-sm btn-outline-danger">
            <i class="bi bi-box-arrow-right"></i> Déconnexion
        </a>
    </div>

    <div class="row g-4">
        <!-- Informations personnelles -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">📋 Vos informations</h5>
                </div>
                <div class="card-body">
                    <p><strong>Email :</strong> @Model.Email</p>
                    <p><strong>Téléphone :</strong> @Model.Phone</p>
                </div>
            </div>
        </div>

        <!-- Actions disponibles -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">⚙️ Actions rapides</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <a asp-action="Index" class="text-decoration-none text-dark">
                                <i class="bi bi-person-lines-fill me-2"></i>Liste des utilisateurs
                            </a>
                        </li>
                        <li class="list-group-item">
                            <a asp-action="Create" class="text-decoration-none text-dark">
                                <i class="bi bi-person-plus-fill me-2"></i>Ajouter un nouvel utilisateur
                            </a>
                        </li>
                        <li class="list-group-item">
                            <a href="#" class="text-decoration-none text-dark">
                                <i class="bi bi-calendar-check me-2"></i>Voir mes rendez-vous
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Section notifications -->
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">🔔 Notifications</h5>
                </div>
                <div class="card-body">
                    <p>Pas de nouvelles notifications pour le moment.</p>
                </div>
            </div>
        </div>
    </div>
</div>
