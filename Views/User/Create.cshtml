@model DocuLink.Models.ViewModels.UserCreateViewModel

<h2>Create User</h2>

@if (ViewBag.PasswordError != null)
{
    <div class="alert alert-danger">@ViewBag.PasswordError</div>
}

<form asp-action="Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Phone"></label>
        <input type="number" asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsDoctor"></label>
        <input asp-for="IsDoctor" type="checkbox" />
        <span asp-validation-for="IsDoctor" class="text-danger"></span>
    </div>

    <div class="form-group" id="specialtyGroup" style="display: @(Model.IsDoctor ? "block" : "none");">
        <label asp-for="Specialty"></label>
        <input asp-for="Specialty" class="form-control" />
        <span asp-validation-for="Specialty" class="text-danger"></span>
    </div>

    <div class="form-group" id="locationGroup" style="display: @(Model.IsDoctor ? "block" : "none");">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <div class="form-group" id="diplomaFileGroup" style="display: @(Model.IsDoctor ? "block" : "none");">
        <label asp-for="DiplomaFile"></label>
        <input asp-for="DiplomaFile" type="file" class="form-control" accept=".pdf" />
        <span asp-validation-for="DiplomaFile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $("#IsDoctor").change(function () {
                if ($(this).is(":checked")) {
                    $("#specialtyGroup, #locationGroup, #diplomaFileGroup").show();
                } else {
                    $("#specialtyGroup, #locationGroup, #diplomaFileGroup").hide();
                }
            });
        });
    </script>
}