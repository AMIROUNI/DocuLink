@model DocuLink.Models.Appointment
@{
    ViewData["Title"] = "Delete Appointment";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Delete Appointment</h3>
    </div>
    <div class="card-body">
        <h4>Are you sure you want to delete this appointment?</h4>
        <dl class="row">
            <dt class="col-sm-2">Date</dt>
         
            <dt class="col-sm-2">Status</dt>
        
            <dt class="col-sm-2">Reason</dt>
            <dd class="col-sm-10">@Model.Reason</dd>
            <dt class="col-sm-2">Patient</dt>
            <dd class="col-sm-10">@Model.User?.Name</dd>
            <dt class="col-sm-2">Doctor</dt>
            <dd class="col-sm-10">@Model.Doctor?.Name</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group mt-4">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>