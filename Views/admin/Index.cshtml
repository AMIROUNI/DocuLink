@model IEnumerable<DocuLink.Models.User>

@{
    ViewData["Title"] = "Users Management";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-6">👥 Users Management</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-person-add"></i> Add User
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No users found in the system.
    </div>
}
else
{
    <div class="table-responsive shadow-sm rounded">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="avatar-sm me-2">
                                    <div class="avatar-title bg-primary text-white rounded-circle">
                                        @user.Name
                                    </div>
                                </div>
                                @user.Name
                            </div>
                        </td>
                        <td>
                            <a href="mailto:@user.Email" class="text-decoration-none">
                                @user.Email
                            </a>
                        </td>
                        <td>@user.Phone</td>
                        <td class="text-end">
                            <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-outline-info me-1">
                                <i class="bi bi-file-text"></i> Details
                            </a>
                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-secondary me-1">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}