@{
    ViewData["Title"] = "Tableau de bord Admin";
}

<div class="container py-5">
    <h1 class="mb-4 text-primary">
        <i class="bi bi-speedometer2 me-2"></i> Tableau de bord Administrateur
    </h1>

    <div class="row g-4">
        <!-- Card: Médecins -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title text-secondary">
                        <i class="bi bi-person-badge"></i> Médecins
                    </h5>
                    <p class="card-text text-muted">Gérez les profils des médecins, spécialités, et leurs activités.</p>
                    <a asp-action="ManageDoctors" class="btn btn-outline-primary w-100">
                        Gérer les Médecins
                    </a>
                </div>
            </div>
        </div>

        <!-- Card: Utilisateurs -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title text-secondary">
                        <i class="bi bi-people-fill"></i> Utilisateurs
                    </h5>
                    <p class="card-text text-muted">Consultez les utilisateurs inscrits et modérez si nécessaire.</p>
                    <a asp-action="ManageUsers" class="btn btn-outline-secondary w-100">
                        Gérer les Utilisateurs
                    </a>
                </div>
            </div>
        </div>

        <!-- Card: Statistiques -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 bg-light">
                <div class="card-body">
                    <h5 class="card-title text-secondary">
                        <i class="bi bi-bar-chart-line-fill"></i> Statistiques
                    </h5>
                    <p class="card-text text-muted">Visualisez les données sur les rendez-vous, spécialités populaires, etc.</p>
                    <a href="#" class="btn btn-outline-dark w-100 disabled">
                        À venir
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="text-end mt-5">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-dark">
            <i class="bi bi-house-door"></i> Retour à l’accueil
        </a>
    </div>
</div>
